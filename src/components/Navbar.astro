---
import { Icon } from "astro-icon/components";
---
<div class="navbar bg-base-100 border-base-300 border-b-4 fixed w-full z-10">
    <div class="navbar-start flex gap-2">
        <a class="btn">
            <Icon name="mdi:home" class="text-3xl" />
            <span class="hidden md:block">Accueil</span>
        </a>
        <a class="btn">
            <Icon name="mdi:message-question" class="text-3xl" />
            <span class="hidden md:block">FAQ</span>
        </a>
        <a class="btn">
            <Icon name="mdi:graph-line-shimmer" class="text-3xl" />
            <span class="hidden md:block">Stats</span>
        </a>
    </div>
    <div class="navbar-center">
      <a class="hover:scale-110 transition-transform duration-500">
        <img src="/logo_title.png" class="w-32 h-auto" />
      </a>
    </div>
    <div class="navbar-end">
      <a class="btn btn-primary btn-disabled" href="https://app.pokekerna.xyz" target="_blank">
        <Icon name="mdi:play-circle" class="text-3xl" />
        <span class="hidden md:block">Application</span>
      </a>
    </div>
  </div>